{
    "compilerOptions": {
        "baseUrl": "./src",
        "jsx": "react",
        "moduleResolution": "Node",
        "paths": {
            "~*": [
                "./*"
            ],
            "*":[
                "*",
                "../additionalTypes/*"
            ]
        },
        "typeRoots": ["./node_modules/@types","./additionalTypes"],
        "strict": true,
        "target": "ES2015",
    },
    "include": [
        "src/**/*"
    ]
}